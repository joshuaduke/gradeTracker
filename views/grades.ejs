<%- include('partials/header.ejs')  %> 

<main>
    <header class="p-3" id="courses_Header">
        <ul class="row">
            <li class="col">
                <a href="/courses">
                    <p class="text-start">Courses</p>
                </a>
            </li>
            <li class="col">
                <p class="text-center">Course Name</p>
            </li>
            <li class="col">
                <a href="/grades_edit">
                    <p class="text-end">Edit</p>
                </a>
            </li>
        </ul>
    </header>

    <section class="row text-center pb-3" id="courses_Stats">
        <div class="col border-end">
            <p class="py-1">GPA</p>
            <p>3.29</p>
        </div>
        <div class="col border-end">
            <p class="py-1">Current <br> Grade</p>
            <p>3.1</p>
        </div>
        <div class="col border-end">
            <p class="py-1">Grade</p>
            <p>B</p>
        </div>
        <div class="col ">
            <p class="py-1">Target <br> Grade</p>
            <p> <span>73.93</span>%</p>
        </div>
    </section>

    <section id="course_List">
        <div class="course_item py-3 border-bottom border-secondary">
            <div class="d-flex flex-row mx-4 justify-content-between">
                <div>
                    <p class="py-2">Assignment 1</p>
                </div>
    
                <div class="ms-3 text-center" >
                    <span style="font-size: 8px;" class="d-block">Need</span>
                    <!-- <p><span>88.9</span>%</p> -->
                    <input type="text" name="name" placeholder="79%" class="course_grade" maxlength="4">
                </div>
            </div>
        </div>

        <div class="course_item py-3 border-bottom border-secondary">
            <div class="d-flex flex-row mx-4 justify-content-between">
                <div>
                    <p class="py-2">Assignment 1</p>
                </div>
    
                <div class="ms-3 text-center" >
                    <span style="font-size: 8px;" class="d-block">Got</span>
                    <!-- <p><span>88.9</span>%</p> -->
                    <span>
                        <input type="text" name="name" value="72" class="course_grade" pattern="\d*" maxlength="3">
                        /100
                    </span>
                </div>
            </div>
        </div>
    </section>
    <%- include('partials/navbar.ejs')  %> 
</main>

<script>
 const courseGrade = document.querySelectorAll('.course_grade');

 courseGrade.forEach(grade =>{
    grade.addEventListener('input', resizeInput)
 resizeInput.call(grade);
})



function resizeInput(){
    if(this.value !== ''){
        if (this.value.length <= 3) {
            this.style.width = this.value.length + "ch";
        }
    } else {
        this.style.width = 4 + "ch";
    }
}
</script>

